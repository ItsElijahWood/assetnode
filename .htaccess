# Enable mod_rewrite
RewriteEngine On

# Rewrite URLs with .php to remove the .php extension
RewriteRule ^([a-zA-Z0-9_-]+)$ $1.php [L]

# Try to find the file without the .php extension if the file is not specified
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteRule ^([a-zA-Z0-9_-]+)$ $1.php [L]

# Ensure directories and existing files are not affected
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteRule ^(.*)$ /index.php [L]
